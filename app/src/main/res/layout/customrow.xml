<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rowLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/date"
        android:layout_width="101dp"
        android:layout_height="70dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/title_txt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id" />

    <TextView
        android:id="@+id/title_txt"
        android:layout_width="305dp"
        android:layout_height="64dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="4dp"
        android:text="title"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_txt"
        android:layout_width="302dp"
        android:layout_height="75dp"
        android:text="text"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/title_txt"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/title_txt"
        app:layout_constraintTop_toBottomOf="@+id/title_txt" />

    <ImageView
        android:id="@+id/addimage_view"
        android:layout_width="307dp"
        android:layout_height="109dp"
        app:layout_constraintEnd_toEndOf="@+id/text_txt"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/text_txt"
        app:layout_constraintTop_toBottomOf="@+id/text_txt"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/id"
        android:layout_width="99dp"
        android:layout_height="60dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/title_txt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>